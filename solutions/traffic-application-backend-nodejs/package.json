{
  "name": "summit-2020-rhmi-lab-nodejs-api",
  "version": "0.1.0",
  "description": "A complete implementation of the Traffic and Meters API for the Red Hat Managed Integration Lab at Red Hat Summit 2020",
  "main": "src/server.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "nodeshift": "nodeshift --expose",
    "format": "prettier --write --single-quote src/*.ts src/**/*.ts && git add .",
    "start": "node src/server.js",
    "start-dev": "nodemon -e ts -x ts-node src/server.ts | pino-pretty -t",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evanshortiss/summit-2020-rhmi-lab.git"
  },
  "author": "Evan Shortiss <evanshortiss@gmail.com> (http://evanshortiss.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evanshortiss/summit-2020-rhmi-lab/issues"
  },
  "homepage": "https://github.com/evanshortiss/summit-2020-rhmi-lab#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nearform/sql": "^1.4.0",
    "cors": "^2.8.5",
    "env-var": "github:evanshortiss/env-var#6.x",
    "express": "~4.17.1",
    "express-joi-validation": "^4.0.3",
    "helmet": "~3.21.0",
    "kube-probe": "~0.3.2",
    "morgan": "~1.9.1",
    "pg": "~7.12.1",
    "pino": "~5.13.2",
    "swagger-ui-express": "~4.1.1"
  },
  "devDependencies": {
    "@types/express": "~4.17.1",
    "@types/hapi__joi": "^16.0.9",
    "@types/node": "~12.7.5",
    "@types/pg": "~7.11.1",
    "@types/pino": "~5.8.10",
    "@types/swagger-ui-express": "~3.0.1",
    "husky": "~3.0.5",
    "nodemon": "~1.19.2",
    "nodeshift": "~3.1.1",
    "pino-pretty": "~3.2.1",
    "prettier": "~1.18.2",
    "ts-node": "~8.3.0",
    "typescript": "~3.4.5"
  }
}
